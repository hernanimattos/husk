{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es6","ES2020"],
    "module": "commonjs",
    "rootDir": "./src",

    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@utils/*": ["./src/utils/*"]
    },

    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include":[
    "src/**/*"
  ]
}
